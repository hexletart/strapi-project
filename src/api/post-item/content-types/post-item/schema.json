{
  "kind": "collectionType",
  "collectionName": "post_items",
  "info": {
    "singularName": "post-item",
    "pluralName": "post-items",
    "displayName": "postItem",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "postTitle": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "postText": {
      "type": "blocks",
      "required": true
    },
    "postImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "comments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::comment.comment",
      "mappedBy": "post_item"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "post_items"
    }
  }
}
